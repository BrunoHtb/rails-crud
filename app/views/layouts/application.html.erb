<!DOCTYPE html>
<html>
  <head>
    <title>RailsCurso</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <%= nav_bar brand: "Loja de Produtos", brand_link: root_url do %>
    <%= menu_group do %>
      <%= menu_item "Criar Novo Produto", new_produto_path %>
    <% end %>

    <%= form_tag busca_produto_path, method: :get, class:"navbar-form navbar-right" do %>
      <div class="form-group">
        <%= text_field_tag :nome, @nome_pesquisado, class:"form-control" %>
        <%= button_to "Buscar", nil,class:"btn btn-default"  %>
      <div class="form-group">
    <% end %>
  <%end%>

  <div class="container">
    <body>
      <%= yield %>
    </body>
  </div>
</html>
